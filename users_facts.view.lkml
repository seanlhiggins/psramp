view: users_facts {
  derived_table: {
    sql: SELECT users.id as user_id,
    MIN($users.created_date) as user_created
    MAX($orders.created_date) as users_last_order
    COUNT(*) as all_orders
    FROM users as users
    LEFT JOIN orders as orders
    ON users.id=orders.user_id
    GROUP BY 1,2
    ORDER BY 1;;
    persist_for: "72 hours"
    distribution: ""
  }

